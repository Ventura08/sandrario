generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Turma {
  id                  Int    @id @default(autoincrement())
  nome                String @db.VarChar(255)
  quantidade_horarios Int
}

model Disciplina {
  id           Int        @id @default(autoincrement())
  nome         String     @db.VarChar(255)
  hora_aula    Decimal    @db.Decimal(10, 0)
  aulas_totais Int
  professor    Professor?
}

model Professor {
  id            Int         @id @default(autoincrement())
  nome          String      @db.VarChar(255)
  disciplina_id Int?        @unique
  disciplina    Disciplina? @relation(fields: [disciplina_id], references: [id])
}
